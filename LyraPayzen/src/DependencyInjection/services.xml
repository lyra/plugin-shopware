<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" autowire="true" />

        <service id="LyraPayment\Payzen\Service\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="LyraPayment\Payzen\Service\LocaleCodeService">
            <argument type="service" id="language.repository" />
        </service>

        <service id="LyraPayment\Payzen\Service\OrderService" class="LyraPayment\Payzen\Service\OrderService">
            <argument type="service" id="order.repository" />
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <argument type="service" id="payzen.logger" />
        </service>

        <service id="LyraPayment\Payzen\Service\PaymentMethodService">
            <argument type="service" id="payment_method.repository" />
            <argument type="service" id="sales_channel.repository" />
        </service>
    </services>
</container>