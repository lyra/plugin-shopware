{% sw_extends '@Storefront/storefront/page/checkout/finish/finish-details.html.twig' %}
{% block page_checkout_finish_header %}
    {% if app.request.getSession.get('lyraIsCancelledPayment') %}
        <h1 class="finish-header">
            {{ "lyraPaymentCancel"|trans }}
        </h1>

    {% elseif app.request.getSession.get('lyraIsPaymentError') %}
        <h1 class="finish-header">
            {{ "lyraPaymentError"|trans }}
        </h1>
    {% else %}
        {{ parent()}}
    {% endif %}
{% endblock %}